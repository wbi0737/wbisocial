{% extends "WbiForumBundle::layout.html.twig" %}

{% block wbiforum_body %}

<h1>Users list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Familly_name</th>
            <th>Name</th>
            <th>Email</th>
            <th>Enabled</th>
            <th>Salt</th>
            <th>Password</th>
            <th>Last_login</th>
            <th>Locked</th>
            <th>Expired</th>
            <th>Expired_at</th>
            <th>Confirmation_token</th>
            <th>Password_requested_at</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('users_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.famillyname }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.enabled }}</td>
            <td>{{ entity.salt }}</td>
            <td>{{ entity.password }}</td>
            <td>{% if entity.lastlogin %}{{ entity.lastlogin|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.locked }}</td>
            <td>{{ entity.expired }}</td>
            <td>{% if entity.expiredat %}{{ entity.expiredat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.confirmationtoken }}</td>
            <td>{% if entity.passwordrequestedat %}{{ entity.passwordrequestedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.roles }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('users_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('users_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('users_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}