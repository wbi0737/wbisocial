{% extends "WbiForumBundle::layout.html.twig" %}

{% block wbiforum_body %}

<h1>Comments list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Commentautheur</th>
            <th>Commentautheuremail</th>
            <th>Commentdate</th>
            <th>Commentcontent</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('comments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.commentAutheur }}</td>
            <td>{{ entity.commentAutheurEmail }}</td>
            <td>{% if entity.commentDate %}{{ entity.commentDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.commentContent }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('comments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('comments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('comments_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}