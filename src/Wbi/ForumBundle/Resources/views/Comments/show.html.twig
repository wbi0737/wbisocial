{% extends "WbiForumBundle::layout.html.twig" %}

{% block wbiforum_body %}
<h1>Comments</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Commentautheur</th>
            <td>{{ entity.commentAutheur }}</td>
        </tr>
        <tr>
            <th>Commentautheuremail</th>
            <td>{{ entity.commentAutheurEmail }}</td>
        </tr>
        <tr>
            <th>Commentdate</th>
            <td>{{ entity.commentDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Commentcontent</th>
            <td>{{ entity.commentContent }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('comments') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('comments_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('comments_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}