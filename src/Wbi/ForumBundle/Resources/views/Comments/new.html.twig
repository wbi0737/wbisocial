{% extends "WbiForumBundle::layout.html.twig" %}

{% block wbiforum_body %}
<h1>Comments creation</h1>

<form action="{{ path('comments_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('comments') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}